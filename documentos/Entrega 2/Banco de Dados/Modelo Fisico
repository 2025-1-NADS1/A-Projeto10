/* FISICO_DEF: */

CREATE TABLE USUARIO_CADASTRO (
    NOME VARCHAR2(100),
    EMAIL VARCHAR2(200),
    TELEFONE NUMBER(11),
    ENDERECO VARCHAR2(400),
    ID_USUARIO VARCHAR2(16),
    NOME_USUARIO VARCHAR2(100),
    EMAIL VARCHAR2(400),
    TELEFONE NUMBER(20),
    SENHA VARCHAR2(30)
);

CREATE TABLE PAINEL_CONTROLE (
    PAINEL_CONTROLE BLOB,
    DADOS_CONSUMO LONG,
    GRAFICOS BLOB,
    ICONE_DESEMPENHO BLOB,
    ICONE_RECOMPENSA BLOB
);

CREATE TABLE GRAFICOS (
    LAYOUT_GRAFICOS BLOB,
    BARRAS BLOB,
    SETORES BLOB,
    LINHAS BLOB
);

CREATE TABLE BANCO_DADOS_CONSUMO (
    DADOS_CONSUMO LONG(10000),
    KWH VARCHAR2(1000),
    TEMPO TIMESTAMP
);

CREATE TABLE BANCO_DADOS_DESEMPENHO (
    DADOS_DESEMPENHO LONG(10000),
    MEDIA LONG(10000),
    COMPARACAO LONG(10000)
);

CREATE TABLE PONTUACAO (
    PONTOS NUMBER(2000),
    BONUS NUMBER(2000)
);

CREATE TABLE DESEMPENHO (
    ECONOMIA VARCHAR2(2),
    BOM VARCHAR2(2),
    MEDIO VARCHAR2(2),
    DESPERDICIO VARCHAR2(2)
);

CREATE TABLE SENSORES (
    CONTADOR_KWH LONG(10000),
    MOVIMENTO LONG(10000),
    ID_SENSOR LONG(10000)
);

CREATE TABLE ACESSO (
    FK_USUARIO_CADASTRO_EMAIL VARCHAR2(200),
    FK_USUARIO_CADASTRO_TELEFONE NUMBER(11),
    FK_USUARIO_CADASTRO_ID_USUARIO VARCHAR2(16),
    FK_PAINEL_CONTROLE_PAINEL_CONTROLE BLOB
);

CREATE TABLE VISUALIZACAO (
    FK_PAINEL_CONTROLE_PAINEL_CONTROLE BLOB,
    FK_GRAFICOS_LAYOUT_GRAFICOS BLOB
);

CREATE TABLE RECOMPENSA (
    FK_PAINEL_CONTROLE_PAINEL_CONTROLE BLOB,
    FK_PONTUACAO_PONTOS NUMBER(2000)
);

CREATE TABLE AVALIACAO (
    FK_DESEMPENHO_ECONOMIA VARCHAR2(2),
    FK_PONTUACAO_PONTOS NUMBER(2000)
);

CREATE TABLE CONTATO (
    FK_BANCO_DADOS_DESEMPENHO_DADOS_DESEMPENHO LONG(10000),
    FK_DESEMPENHO_ECONOMIA VARCHAR2(2)
);

CREATE TABLE CONTATO (
    FK_BANCO_DADOS_CONSUMO_DADOS_CONSUMO LONG(10000),
    FK_GRAFICOS_LAYOUT_GRAFICOS BLOB
);

CREATE TABLE CONECTADO (
    FK_SENSORES_ID_SENSOR LONG(10000),
    FK_BANCO_DADOS_CONSUMO_DADOS_CONSUMO LONG(10000)
);

CREATE TABLE CONECTADO (
    FK_SENSORES_ID_SENSOR LONG(10000),
    FK_BANCO_DADOS_DESEMPENHO_DADOS_DESEMPENHO LONG(10000)
);
